<div class="contents row">
  <a href="/">一覧にもどる</a>
  <%= form_tag('/create', method: :post) do %>
    <h3>
      投稿する
    </h3>
    <div class="form">



      <div class="form-body">
        <% @article.errors.full_messages.each do |message| %>
        <div class ="form-error">
          <%= message %>
          </div>
          <% end %>
    <p><input type="text" name="title" placeholder="タイトル"></p>
    <p><input type="text" name="day" placeholder="開催日"></p>
    <textarea name="content" placeholder="記事を書いてください" rows="10" cols="50"><%= @article.content %></textarea>
    <p><input type="submit" value="投稿"></p>
    </div>
    </div>
  <% end %>
</div>
