<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%="/user_images.jpg/#{@user.image_name}"%>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>

      <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    
      <% @user.articles.each do |article| %>
      <div class="articles-index-item">

        <div class="article-left">
          <img src="<%="/user_images.jpg/#{@user.image_name}"%>">
          </div>
          <div class="article-right">
            <%= link_to(article.user.name, "/users/#{article.user.id}") %>
            </div>
          <%= link_to(article.content, "/articles/#{article.id}") %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
