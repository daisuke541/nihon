<div class="main articles-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
<%= form_tag("/articles/#{@article.id}/update") do %>
    <div class="form">
      <div class="form-body">
        </div>

        <p><input type="text" name="title" placeholder="タイトル"></p>
        <p><input type="text" name="day" placeholder="開催日"></p>
        <textarea name="content" placeholder="記事を書いてください" rows="10" cols="50"><%= @article.content %></textarea>

        <input type="submit" value="保存">
      </div>
    </div>
<% end %>
  </div>
</div>
